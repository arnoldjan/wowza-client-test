<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="mi.wowza_guzzle_test.recording.controller.start"
                 class="Mi\WowzaGuzzleTest\Recording\Controller\Start">
            <argument type="service" id="mi_wowza_recording_handler"/>
        </service>

        <service id="mi.wowza_guzzle_test.recording.controller.stop"
                 class="Mi\WowzaGuzzleTest\Recording\Controller\Stop">
            <argument type="service" id="mi_wowza_recording_handler"/>
        </service>

    </services>
</container>
